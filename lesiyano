    <script>
        // Language Switching
        const englishBtn = document.getElementById('englishBtn');
        const arabicBtn = document.getElementById('arabicBtn');
        const englishElements = document.querySelectorAll('.english-text');
        const arabicElements = document.querySelectorAll('.arabic-text');

        englishBtn.addEventListener('click', () => {
            englishElements.forEach(el => el.classList.remove('hidden'));
            arabicElements.forEach(el => el.classList.add('hidden'));
            document.documentElement.dir = 'ltr';
            document.documentElement.lang = 'en';
        });

        arabicBtn.addEventListener('click', () => {
            englishElements.forEach(el => el.classList.add('hidden'));
            arabicElements.forEach(el => el.classList.remove('hidden'));
            document.documentElement.dir = 'rtl';
            document.documentElement.lang = 'ar';
        });

        // Admin Panel
        const adminBtn = document.getElementById('adminBtn');
        const adminPanel = document.getElementById('adminPanel');
        const closeAdmin = document.getElementById('closeAdmin');
        const adminLoginBtn = document.getElementById('adminLoginBtn');
        const adminLoginBtnAr = document.getElementById('adminLoginBtnAr');
        const adminDashboard = document.getElementById('adminDashboard');
        const adminLogout = document.getElementById('adminLogout');
        const adminLogoutAr = document.getElementById('adminLogoutAr');
        const adminPassword = document.getElementById('adminPassword');

        adminBtn.addEventListener('click', () => {
            adminPanel.classList.remove('hidden');
        });

        closeAdmin.addEventListener('click', () => {
            adminPanel.classList.add('hidden');
        });

        adminLoginBtn.addEventListener('click', () => {
            if (adminPassword.value === 'saleem17173') {
                adminPanel.classList.add('hidden');
                adminDashboard.classList.remove('hidden');
            } else {
                alert('Incorrect password');
            }
        });

        adminLoginBtnAr.addEventListener('click', () => {
            if (adminPassword.value === 'saleem17173') {
                adminPanel.classList.add('hidden');
                adminDashboard.classList.remove('hidden');
            } else {
                alert('كلمة المرور غير صحيحة');
            }
        });

        adminLogout.addEventListener('click', () => {
            adminDashboard.classList.add('hidden');
            adminPassword.value = '';
        });

        adminLogoutAr.addEventListener('click', () => {
            adminDashboard.classList.add('hidden');
            adminPassword.value = '';
        });

        // Order Tracking
        const trackOrderBtn = document.getElementById('trackOrderBtn');
        const trackOrderBtnAr = document.getElementById('trackOrderBtnAr');
        const trackingInput = document.getElementById('trackingInput');
        const orderDetails = document.getElementById('orderDetails');
        const pickupBtn = document.getElementById('pickupBtn');
        const pickupBtnAr = document.getElementById('pickupBtnAr');

        // Sample data storage (in a real app, this would be a database)
        let orders = [
            {
                name: "Ahmed Al-Sabah",
                phone: "+96555512345",
                register: "REG1001",
                totalProducts: 3,
                readyProducts: 2,
                deliveryDate: "2023-12-15",
                totalAmount: "21,000 KWD",
                pickupRequested: false
            },
            {
                name: "Mohammed Al-Farsi",
                phone: "+96566678901",
                register: "REG1002",
                totalProducts: 1,
                readyProducts: 0,
                deliveryDate: "2023-12-20",
                totalAmount: "7,000 KWD",
                pickupRequested: false
            }
        ];

        // Admin Dashboard Functions
        const customerName = document.getElementById('customerName');
        const customerPhone = document.getElementById('customerPhone');
        const registerNumber = document.getElementById('registerNumber');
        const totalProducts = document.getElementById('totalProducts');
        const readyProducts = document.getElementById('readyProducts');
        const deliveryDate = document.getElementById('deliveryDate');
        const totalAmount = document.getElementById('totalAmount');
        const saveOrder = document.getElementById('saveOrder');
        const saveOrderAr = document.getElementById('saveOrderAr');
        const pickupList = document.getElementById('pickupList');
        const allOrders = document.getElementById('allOrders');

        // Calculate total amount
        totalProducts.addEventListener('input', () => {
            if (totalProducts.value) {
                const amount = parseInt(totalProducts.value) * 7000;
                totalAmount.value = amount.toLocaleString() + ' KWD';
            } else {
                totalAmount.value = '';
            }
        });

        // Save new order
        saveOrder.addEventListener('click', () => {
            if (!customerName.value || !customerPhone.value || !registerNumber.value || !totalProducts.value || !deliveryDate.value) {
                alert('Please fill all required fields');
                return;
            }

            const newOrder = {
                name: customerName.value,
                phone: customerPhone.value,
                register: registerNumber.value,
                totalProducts: parseInt(totalProducts.value),
                readyProducts: readyProducts.value ? parseInt(readyProducts.value) : 0,
                deliveryDate: deliveryDate.value,
                totalAmount: (parseInt(totalProducts.value) * 7000).toLocaleString() + ' KWD',
                pickupRequested: false
            };

            orders.push(newOrder);
            renderAllOrders();
            clearOrderForm();

            alert('Order saved successfully');
        });

        saveOrderAr.addEventListener('click', () => {
            if (!customerName.value || !customerPhone.value || !registerNumber.value || !totalProducts.value || !deliveryDate.value) {
                alert('يرجى ملء جميع الحقول المطلوبة');
                return;
            }

            const newOrder = {
                name: customerName.value,
                phone: customerPhone.value,
                register: registerNumber.value,
                totalProducts: parseInt(totalProducts.value),
                readyProducts: readyProducts.value ? parseInt(readyProducts.value) : 0,
                deliveryDate: deliveryDate.value,
                totalAmount: (parseInt(totalProducts.value) * 7000).toLocaleString() + ' KWD',
                pickupRequested: false
            };

            orders.push(newOrder);
            renderAllOrders();
            clearOrderForm();

            alert('تم حفظ الطلب بنجاح');
        });

        function clearOrderForm() {
            customerName.value = '';
            customerPhone.value = '';
            registerNumber.value = '';
            totalProducts.value = '';
            readyProducts.value = '';
            deliveryDate.value = '';
            totalAmount.value = '';
        }

        function renderAllOrders() {
            allOrders.innerHTML = '';
            
            if (orders.length === 0) {
                const noOrdersEn = document.createElement('p');
                noOrdersEn.className = 'text-gray-500 english-text';
                noOrdersEn.textContent = 'No orders added yet';
                
                const noOrdersAr = document.createElement('p');
                noOrdersAr.className = 'text-gray-500 arabic-text hidden';
                noOrdersAr.textContent = 'لا توجد طلبات مضافة بعد';
                
                allOrders.appendChild(noOrdersEn);
                allOrders.appendChild(noOrdersAr);
                return;
            }
            
            orders.forEach((order, index) => {
                const orderItem = document.createElement('div');
                orderItem.className = 'bg-gray-50 p-4 rounded-lg mb-4';
                
                orderItem.innerHTML = `
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-2">
                        <div>
                            <p class="text-gray-600 english-text">Customer</p>
                            <p class="text-gray-600 arabic-text hidden">العميل</p>
                            <p class="font-medium">${order.name}</p>
                        </div>
                        <div>
                            <p class="text-gray-600 english-text">Phone</p>
                            <p class="text-gray-600 arabic-text hidden">الهاتف</p>
                            <p class="font-medium">${order.phone}</p>
                        </div>
                        <div>
                            <p class="text-gray-600 english-text">Register No.</p>
                            <p class="text-gray-600 arabic-text hidden">رقم التسجيل</p>
                            <p class="font-medium">${order.register}</p>
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <div>
                            <p class="text-gray-600 english-text">Total</p>
                            <p class="text-gray-600 arabic-text hidden">الإجمالي</p>
                            <p class="font-medium">${order.totalProducts}</p>
                        </div>
                        <div>
                            <p class="text-gray-600 english-text">Ready</p>
                            <p class="text-gray-600 arabic-text hidden">جاهز</p>
                            <p class="font-medium">${order.readyProducts}</p>
                        </div>
                        <div>
                            <p class="text-gray-600 english-text">Delivery</p>
                            <p class="text-gray-600 arabic-text hidden">التسليم</p>
                            <p class="font-medium">${formatDate(order.deliveryDate)}</p>
                        </div>
                        <div>
                            <p class="text-gray-600 english-text">Amount</p>
                            <p class="text-gray-600 arabic-text hidden">المبلغ</p>
                            <p class="font-medium">${order.totalAmount}</p>
                        </div>
                    </div>
                    <div class="mt-3 flex justify-between items-center">
                        <span class="text-sm ${order.pickupRequested ? 'text-green-600' : 'text-gray-500'} english-text">
                            ${order.pickupRequested ? 'Pickup requested' : 'No pickup requested'}
                        </span>
                        <span class="text-sm ${order.pickupRequested ? 'text-green-600' : 'text-gray-500'} arabic-text hidden">
                            ${order.pickupRequested ? 'تم طلب الاستلام' : 'لا يوجد طلب استلام'}
                        </span>
                        <button class="text-red-500 hover:text-red-700 english-text delete-order" data-index="${index}">
                            <i class="fas fa-trash mr-1"></i> Delete
                        </button>
                        <button class="text-red-500 hover:text-red-700 arabic-text hidden delete-order" data-index="${index}">
                            <i class="fas fa-trash mr-1"></i> حذف
                        </button>
                    </div>
                `;
                
                allOrders.appendChild(orderItem);
            });
            
            // Add event listeners to delete buttons
            document.querySelectorAll('.delete-order').forEach(button => {
                button.addEventListener('click', function() {
                    const index = this.getAttribute('data-index');
                    orders.splice(index, 1);
                    renderAllOrders();
                    renderPickupList();
                });
            });
        }

        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            return new Date(dateString).toLocaleDateString(undefined, options);
        }

        function renderPickupList() {
            pickupList.innerHTML = '';
            
            const pickupOrders = orders.filter(order => order.pickupRequested);
            
            if (pickupOrders.length === 0) {
                const noPickupsEn = document.createElement('p');
                noPickupsEn.className = 'text-gray-500 english-text';
                noPickupsEn.textContent = 'No pickups scheduled yet';
                
                const noPickupsAr = document.createElement('p');
                noPickupsAr.className = 'text-gray-500 arabic-text hidden';
                noPickupsAr.textContent = 'لا يوجد استلام مجدول بعد';
                
                pickupList.appendChild(noPickupsEn);
                pickupList.appendChild(noPickupsAr);
                return;
            }
            
            pickupOrders.forEach(order => {
                const pickupItem = document.createElement('div');
                pickupItem.className = 'bg-white p-4 rounded-lg shadow pickup-item mb-3';
                
                pickupItem.innerHTML = `
                    <div class="flex justify-between items-center">
                        <div>
                            <p class="font-medium">${order.name}</p>
                            <p class="text-sm text-gray-600">${order.phone}</p>
                            <p class="text-sm text-gray-600 english-text">Register: ${order.register}</p>
                            <p class="text-sm text-gray-600 arabic-text hidden">التسجيل: ${order.register}</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm english-text">Ready: ${order.readyProducts}/${order.totalProducts}</p>
                            <p class="text-sm arabic-text hidden">جاهز: ${order.readyProducts}/${order.totalProducts}</p>
                            <p class="text-sm english-text">Pickup by: ${formatDate(order.deliveryDate)}</p>
                            <p class="text-sm arabic-text hidden">الاستلام بحلول: ${formatDate(order.deliveryDate)}</p>
                        </div>
                    </div>
                `;
                
                pickupList.appendChild(pickupItem);
            });
        }

        // Track Order
        trackOrderBtn.addEventListener('click', trackOrder);
        trackOrderBtnAr.addEventListener('click', trackOrder);

        function trackOrder() {
            const input = trackingInput.value.trim();
            
            if (!input) {
                if (document.documentElement.lang === 'en') {
                    alert('Please enter your phone number or register number');
                } else {
                    alert('يرجى إدخال رقم الهاتف أو رقم التسجيل');
                }
                return;
            }
            
            // Find order by phone or register number
            const order = orders.find(o => 
                o.phone.includes(input) || o.register.toLowerCase() === input.toLowerCase()
            );
            
            if (order) {
                // Display order details
                document.getElementById('detailName').textContent = order.name;
                document.getElementById('detailPhone').textContent = order.phone;
                document.getElementById('detailRegister').textContent = order.register;
                document.getElementById('detailDate').textContent = formatDate(order.deliveryDate);
                document.getElementById('detailTotal').textContent = order.totalProducts;
                document.getElementById('detailReady').textContent = order.readyProducts;
                document.getElementById('detailAmount').textContent = order.totalAmount;
                
                // Show pickup button if delivery date is today
                const today = new Date().toISOString().split('T')[0];
                if (order.deliveryDate === today && !order.pickupRequested) {
                    pickupBtn.classList.remove('hidden');
                    pickupBtnAr.classList.remove('hidden');
                } else {
                    pickupBtn.classList.add('hidden');
                    pickupBtnAr.classList.add('hidden');
                }
                
                orderDetails.classList.remove('hidden');
            } else {
                if (document.documentElement.lang === 'en') {
                    alert('No order found with that phone or register number');
                } else {
                    alert('لا يوجد طلب بهذا رقم الهاتف أو رقم التسجيل');
                }
            }
        }

        // Pickup Button
        pickupBtn.addEventListener('click', requestPickup);
        pickupBtnAr.addEventListener('click', requestPickup);

        function requestPickup() {
            const input = trackingInput.value.trim();
            const orderIndex = orders.findIndex(o => 
                o.phone.includes(input) || o.register.toLowerCase() === input.toLowerCase()
            );
            
            if (orderIndex !== -1) {
                orders[orderIndex].pickupRequested = true;
                
                // Show confirmation modal
                const pickupModal = document.getElementById('pickupModal');
                pickupModal.classList.remove('hidden');
                
                // Update admin views
                renderAllOrders();
                renderPickupList();
            }
        }

        // Pickup Modal
        const pickupModal = document.getElementById('pickupModal');
        const closePickupModal = document.getElementById('closePickupModal');
        const okPickupBtn = document.getElementById('okPickupBtn');
        const okPickupBtnAr = document.getElementById('okPickupBtnAr');

        closePickupModal.addEventListener('click', () => {
            pickupModal.classList.add('hidden');
        });

        okPickupBtn.addEventListener('click', () => {
            pickupModal.classList.add('hidden');
            orderDetails.classList.add('hidden');
            trackingInput.value = '';
        });

        okPickupBtnAr.addEventListener('click', () => {
            pickupModal.classList.add('hidden');
            orderDetails.classList.add('hidden');
            trackingInput.value = '';
        });

        // Initialize
        renderAllOrders();
        renderPickupList();
    </script>
</body>
</html>
